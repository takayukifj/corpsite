---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="企業の公式ウェブサイト">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | 会社名</title>
	</head>
	<body class="min-h-screen bg-gray-50">
		<header class="bg-white shadow-sm">
			<nav class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<a href="/" class="text-xl font-bold text-blue-900">会社名</a>
					<div class="space-x-4">
						<a href="/" class="text-gray-600 hover:text-blue-900">ホーム</a>
						<a href="/contact" class="text-gray-600 hover:text-blue-900">お問い合わせ</a>
					</div>
				</div>
			</nav>
		</header>

		<slot />

		<footer class="bg-white border-t mt-16">
			<div class="container mx-auto px-4 py-6">
				<p class="text-center text-gray-600">&copy; 2024 会社名. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
